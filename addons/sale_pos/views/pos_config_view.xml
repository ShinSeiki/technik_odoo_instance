<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_config_view_form" model="ir.ui.view">
        <field name="name">pos.config.form.view.inherit.pos.journal.sequence</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/div[last()]" position="inside">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="auto_open_invoice"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="auto_open_invoice" string="Auto Open Invoice"/>
                        <div class="text-muted">
                            Automatically open the invoice
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="auto_done_stock"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="auto_done_stock" string="Auto Done Stock"/>
                        <div class="text-muted">
                            Automatically done the stock
                        </div>
                    </div>
                </div>
                
            </xpath>
        </field>
    </record>

</odoo>
